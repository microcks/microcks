        "allOf": [
          {
            "$ref": "#/components/schemas/BoardSummary"
          },
          {
            "type": "object",
            "properties": {
              "muted": {
                "type": "boolean"
              },
              "pinned": {
                "type": "boolean"
              }
            }
          }
        ],
