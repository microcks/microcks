          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tags"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The contribution was successfully edited.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "contribution": {
                      "$ref": "#/components/schemas/Contribution",
                      "description": "Finalized details of the contributions just edited."
                    }
