      "Comment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "parent_post_id": {
            "type": "string",
            "format": "uuid"
          },
          "parent_comment_id": {
            "type": "string",
            "format": "uuid"
          },
          "chain_parent_id": {
            "type": "string",
            "format": "uuid"
          },
