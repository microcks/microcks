            "name": "post_id",
            "in": "path",
            "description": "The uuid of the contribution to edit.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "The details of the contribution to edit.",
