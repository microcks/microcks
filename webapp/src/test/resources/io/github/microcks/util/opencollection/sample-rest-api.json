{
  "opencollection": "1.0.0",
  "info": {
    "name": "API Pastries",
    "summary": "A sample REST API collection for pastry catalog management",
    "version": "1.0.0",
    "authors": [
      {
        "name": "Microcks Team",
        "email": "hello@microcks.io"
      }
    ]
  },
  "bundled": true,
  "config": {
    "environments": [
      {
        "name": "Development",
        "variables": [
          {
            "name": "baseUrl",
            "value": "http://localhost:8080",
            "enabled": true
          }
        ]
      },
      {
        "name": "Production",
        "variables": [
          {
            "name": "baseUrl",
            "value": "https://api-pastry.microcks.io",
            "enabled": true
          }
        ]
      }
    ]
  },
  "request": {
    "headers": [
      {
        "name": "Content-Type",
        "value": "application/json"
      },
      {
        "name": "Accept",
        "value": "application/json"
      }
    ]
  },
  "items": [
    {
      "type": "folder",
      "name": "Pastries",
      "description": "Pastry catalog endpoints",
      "sequence": 1,
      "items": [
        {
          "type": "request",
          "name": "Get All Pastries",
          "description": "Retrieve a list of all pastries",
          "sequence": 1,
          "request": {
            "type": "http",
            "method": "GET",
            "url": "{{baseUrl}}/pastries"
          },
          "response": [
            {
              "name": "Success Response",
              "status": 200,
              "headers": [
                {
                  "name": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "type": "json",
                "data": "[\n  {\n    \"name\": \"Croissant\",\n    \"description\": \"A buttery, flaky, viennoiserie pastry\",\n    \"size\": \"M\",\n    \"price\": 2.5,\n    \"status\": \"available\",\n    \"country\": \"France\"\n  },\n  {\n    \"name\": \"Pain au Chocolat\",\n    \"description\": \"Chocolatine is also called Pain au Chocolat\",\n    \"size\": \"M\",\n    \"price\": 2.8,\n    \"status\": \"available\",\n    \"country\": \"France\"\n  },\n  {\n    \"name\": \"Baba Rhum\",\n    \"description\": \"Deliciously soft, sweet pastry with distinctive flavor\",\n    \"size\": \"L\",\n    \"price\": 3.2,\n    \"status\": \"available\",\n    \"country\": \"France\"\n  },\n  {\n    \"name\": \"Pretzel\",\n    \"description\": \"A classic German twisted bread\",\n    \"size\": \"M\",\n    \"price\": 2.0,\n    \"status\": \"available\",\n    \"country\": \"Germany\"\n  },\n  {\n    \"name\": \"Berliner\",\n    \"description\": \"German doughnut filled with jam\",\n    \"size\": \"M\",\n    \"price\": 2.3,\n    \"status\": \"available\",\n    \"country\": \"Germany\"\n  }\n]"
              }
            }
          ]
        },
        {
          "type": "request",
          "name": "Get Pastries by Country - France",
          "description": "Search for pastries by country of origin",
          "sequence": 2,
          "request": {
            "type": "http",
            "method": "GET",
            "url": "{{baseUrl}}/pastries",
            "params": [
              {
                "name": "country",
                "value": "France",
                "type": "query",
                "description": "Filter pastries by country of origin"
              }
            ]
          },
          "response": [
            {
              "name": "French Pastries",
              "status": 200,
              "headers": [
                {
                  "name": "Content-Type",
                  "value": "application/json"
