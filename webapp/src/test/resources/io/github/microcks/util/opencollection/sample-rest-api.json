          "sequence": 5,
          "request": {
            "type": "http",
            "method": "GET",
            "url": "{{baseUrl}}/pastries/:name",
            "params": [
              {
                "name": "name",
                "value": "Croissant",
                "type": "path",
                "description": "Pastry name"
              }
            ]
          },
          "response": [
